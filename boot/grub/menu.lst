timeout 5
default 0
#color light-gray/blue black/light-gray
##splashimage /boot/splash.xpm.gz
#splashimage /boot/grub1280x1024_doc04.xpm.gz

title  Boot Mesk Linux ( Arabic  )
kernel /boot/vmlinuz-linux-fbcondecor ro quiet splash=verbose,fadein,fadeout,theme:mesk console=tty1 vga=791 locale=ar_EG.utf8 edd=off
initrd /boot/vmlinuz-linux-fbcondecor.img

title  Boot Mesk Linux ( English )
kernel /boot/vmlinuz-linux-fbcondecor ro quiet splash=verbose,fadein,fadeout,theme:mesk console=tty1 vga=791 locale=en_US.utf8 edd=off
initrd /boot/vmlinuz-linux-fbcondecor.img

title Tools...
configfile /boot/grub/tools.lst

title Grub Settings...
configfile /boot/grub/settings.lst

title View Help...
configfile /boot/grub/help.lst

title More Options...
configfile /boot/grub/more.lst

title  Shutdown the Computer
halt

title  Reboot the Computer
reboot
